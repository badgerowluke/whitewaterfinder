{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters":{
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]", 
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "secondLocation": {
            "type": "string",
            "defaultValue": "eastus",
            "metadata": {
                "description": "secondary location for resources"
            }
        },

        "azureSearchName": { "type" : "string", "defaultValue": "waterfindersearch" },
        "cosmosDbName": { "type" : "string", "defaultValue": "brgscosmosdb"}
    },
    "variables":{},
    "resources":[
        {
            "type": "Microsoft.Search/searchServices",
            "apiVersion": "2015-08-19",
            "name": "[parameters('azureSearchName')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "free"
            }, 
            "properties" : {
                "replicaCount": 1,
                "partitionCount": 1,
                "hostingMode": "Default"
            }
        },
        {
            "apiVersion": "2019-12-12",
            "kind": "GlobalDocumentDB",
            "type": "Microsoft.DocumentDb/databaseAccounts",
            "name": "[parameters('cosmosDbName')]",
            "location": "[parameters('secondLocation')]",
            "properties": {
                "databaseAccountOfferType": "Standard",
                "locations": [
                    {
                        "id": "[concat(parameters('cosmosDbName'), '-', parameters('secondLocation'))]",
                        "failoverPriority": 0,
                        "locationName": "[parameters('secondLocation')]"
                    }
                ],
                "enableMultipleWriteLocations": false,
                "isVirtualNetworkFilterEnabled": false,
                "virtualNetworkRules": [],
                "ipRangeFilter": "",
                "dependsOn": [],
                "capabilities": [
                    {
                        "name": "EnableCassandra"
                    }
                ],
                "enableFreeTier": true
            },
            "tags": {
                "defaultExperience": "Cassandra",
                "hidden-cosmos-mmspecial": "",
                "CosmosAccountType": "Non-Production"
            }
        }       
    ]
}
