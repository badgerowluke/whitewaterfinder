{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]", 
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "tenantId": { "type": "string" }, 
        "adminId": { "type": "string" },
        "kvName": { "type": "string"},
        "apimName": { "type": "string"}
    }, 
    "variables":{},
    "resources": [
        {
            "type":"Microsoft.KeyVault/vaults",
            "apiVersion": "2018-02-14", 
            "name": "[parameters('kvName')]",
            "location":"[parameters('location')]",
            "properties": {
                "sku": {
                    "name": "Standard",
                    "family": "A"
                }, 
                "tenantId":"[parameters('tenantId')]",
                "accessPolicies" : [
                
                        {
                            "objectId": "[parameters('adminId')]",
                            "tenantId": "[parameters('tenantId')]",
                            "permissions": {
                                "keys": [
                                    "Get",
                                    "List",
                                    "Update",
                                    "Create",
                                    "Import",
                                    "Delete",
                                    "Recover",
                                    "Backup",
                                    "Restore"
                                ],
                                "secrets": [
                                    "Get",
                                    "List",
                                    "Set",
                                    "Delete",
                                    "Recover",
                                    "Backup",
                                    "Restore"
                                ],
                                "certificates": [
                                    "Get",
                                    "List",
                                    "Update",
                                    "Create",
                                    "Import",
                                    "Delete",
                                    "Recover",
                                    "Backup",
                                    "Restore",
                                    "ManageContacts",
                                    "ManageIssuers",
                                    "GetIssuers",
                                    "ListIssuers",
                                    "SetIssuers",
                                    "DeleteIssuers"
                                ]
                            }
                        }
                                   
                ]
            }
        },
        {
            "name": "[concat(parameters('kvName'), '/apim-master-key')]",
            "type": "Microsoft.KeyVault/vaults/secrets",
            "apiVersion": "2016-10-01",
            "dependsOn": [
                "[resourceId('Microsoft.KeyVault/vaults', parameters('kvName') )]"
            ],
            "properties": {
                "value": "[reference(resourceId('Microsoft.ApiManagement/service/subscriptions', parameters('apimName'), 'master'), '2019-01-01').primaryKey]"
            }
        }
    ]
}