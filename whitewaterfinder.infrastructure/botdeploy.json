{
    "$schema":"https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters":{
        "location": {
        "type": "string",
        "defaultValue": "[resourceGroup().location]", 
        "metadata": {
            "description": "Location for all resources."
            }
        },        

        "botAppName": { "type" : "string", "defaultValue": "WhitewaterWebster" },
        "botInsightsName": { "type": "string", "defaultValue": "paddle-finder" },
        "msftAppId": { "type": "string" },
        "storageAccountName": { "type": "string" }
    },
    "variables":{

        "storageAccountId": "[concat(resourceGroup().id,'/providers/Microsoft.Storage/storageAccounts/', parameters('storageAccountName'))]"
    },
    "resources":[
   
        {
            "kind": "app",
            "type":"Microsoft.Web/serverfarms",
            "apiVersion": "2017-08-01",
            "name": "[parameters('botAppName')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "F1",
                "tier": "Free",
                "size": "F1",
                "family": "F",
                "capacity": 0
            },
            "properties": {
                "name": "[parameters('botAppName')]",
                "perSiteScaling": false,
                "reserved": false,
                "targetWorkerCount": 0,
                "targetWorkerSizeId": 0
            }
        },
        {
            "apiVersion": "2018-11-01",
            "name": "[parameters('botAppName')]",
            "type": "Microsoft.Web/sites",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverFarms', parameters('botAppName'))]"
            ],
            "tags": null,
            "properties": {
                "name": "[parameters('botAppName')]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "stateStore",
                            "value":"[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('storageAccountName'),';AccountKey=',concat(listKeys(variables('storageAccountId'),'2015-05-01-preview').key1))]"
                        },
                        {
                            "name": "LuisAPIHostName",
                            "value": "[parameters('location')]"
                        },
                        {
                            "name": "LuisAPIKey",
                            "value": "{%%LuisAPIKey%%}"
                        },
                        {
                            "name": "LuisAppId",
                            "value": "{%%LuisAppId%%}"
                        },
                        {
                            "name": "MicrosoftAppId",
                            "value": "[parameters('msftAppId')]"
                        },
                        {
                            "name": "MicrosoftAppPassword",
                            "value": "tacospastapizza4@11"
                        },                        
                        {
                            "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                            "value":"[reference(resourceId('microsoft.insights/components/', parameters('botInsightsName')), '2015-05-01').InstrumentationKey]"
                        },
                        {
                            "name": "ApplicationInsightsAgent_EXTENSION_VERSION",
                            "value": "~2"
                        },
                        {
                            "name": "XDT_MicrosoftApplicationInsights_Mode",
                            "value": "default"
                        },
                        {
                            "name": "DiagnosticServices_EXTENSION_VERSION",
                            "value": "disabled"
                        },
                        {
                            "name": "APPINSIGHTS_PROFILERFEATURE_VERSION",
                            "value": "disabled"
                        },
                        {
                            "name": "APPINSIGHTS_SNAPSHOTFEATURE_VERSION",
                            "value": "disabled"
                        },
                        {
                            "name": "InstrumentationEngine_EXTENSION_VERSION",
                            "value": "disabled"
                        },
                        {
                            "name": "SnapshotDebugger_EXTENSION_VERSION",
                            "value": "disabled"
                        },
                        {
                            "name": "XDT_MicrosoftApplicationInsights_BaseExtensions",
                            "value": "disabled"
                        }
                    ],
                    "metadata": [
                        {
                            "name": "CURRENT_STACK",
                            "value": "dotnetcore"
                        }
                    ],
                    "alwaysOn": false
                },
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms',parameters('botAppName'))]",
                "hostingEnvironment": "",
                "clientAffinityEnabled": true
            }
            
        },
        {
            "kind":"sdk",
            "type": "Microsoft.BotService/botServices",
            "apiVersion": "2018-07-12",
            "name":"[parameters('botAppName')]",
            "location": "global",
            "sku": {
                "name":"F0"
            },
            "properties": {
                "displayName": "[parameters('botAppName')]",
                "iconUrl": "https://docs.botframework.com/static/devportal/client/images/bot-framework-default.png",
                "endpoint": "[concat('https://', parameters('botAppName'), '.azurewebsites.net/api/messages')]",
                "msaAppId": "[reference(resourceId('Microsoft.Web/sites', parameters('botAppName')),'2015-05-01').appId]",
                "developerAppInsightKey": "[reference(resourceId('microsoft.insights/components/', parameters('botInsightsName')), '2015-05-01').InstrumentationKey]",
                "developerAppInsightsApplicationId": "[reference(resourceId('microsoft.insights/components', parameters('botInsightsName')), '2015-05-01').appId]",
                "luisAppIds":[]
            }
        }  
    ],
    "outputs":{}
}