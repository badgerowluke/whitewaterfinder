{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "storageAccountType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Standard_ZRS",
        "Premium_LRS"
      ],
      "metadata": {
        "description": "Storage Account type"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]", 
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "appName":{ "type": "string", "defaultValue" : "paddle-finder" },
    "appPlanName": {"type" : "string", "defaultValue" : "WaterFinderPlan" },
    "preferencesApp" : { "type" : "string" , "defaultValue" : "paddle-finder-preferences" },
    "storageAccountName": { "type" : "string","defaultValue": "waterfinder" },
    "luisName": { "type" : "string", "defaultValue": "webster-luis" },
    "authoringName": { "type" : "string", "defaultValue" : "webster-luis-Authoring"},
    "botAppName": { "type" : "string", "defaultValue": "WhitewaterWebster" }
  },
  "variables": {

    "storageAccountId": "[concat(resourceGroup().id,'/providers/Microsoft.Storage/storageAccounts/', parameters('storageAccountName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2019-04-01",
      "name": "[parameters('storageAccountName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('storageAccountType')]"
      },
      "kind": "StorageV2",
      "properties": {}
    },
    {
        "type":"Microsoft.Storage/storageAccounts/blobServices",
        "apiVersion":"2019-04-01",
        "name": "[concat(parameters('storageAccountName'), '/default')]",
        "dependsOn":[
            "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]"
        ], 
        "properties": {
            "cors": {
                "corsRules": [
                    {
                        "allowedOrigins": [
                            "[concat('https://', parameters('appName'), '.azurewebsites.net')]",
                            "[concat('https://', parameters('preferencesApp'), '.azurewebsites.net')]"
                        ],
                        "allowedMethods": ["GET", "PUT", "POST"],
                        "maxAgeInSeconds": 0,
                        "exposedHeaders": [""],
                        "allowedHeaders": [""]
                        
                    }
                ]
            },
            "deleteRententionPolicy" : { "enabled" : false }
        }
    },
    {
        "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
        "apiVersion": "2019-04-01",
        "name": "[concat(parameters('storageAccountName'), '/default/azure-webjobs-hosts')]",
        "dependsOn": [
            "[resourceId('Microsoft.Storage/storageAccounts/blobServices', parameters('storageAccountName'), 'default')]",
            "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]"
        ],
        "properties": {
            "publicAccess": "None"
        }
    },
    {
        "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
        "apiVersion": "2019-04-01",
        "name": "[concat(parameters('storageAccountName'), '/default/azure-webjobs-secrets')]",
        "dependsOn": [
            "[resourceId('Microsoft.Storage/storageAccounts/blobServices', parameters('storageAccountName'), 'default')]",
            "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]"
        ],
        "properties": {
            "publicAccess": "None"
        }
    },
    {
        "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
        "apiVersion": "2019-04-01",
        "name": "[concat(parameters('storageAccountName'), '/default/data')]",
        "dependsOn": [
            "[resourceId('Microsoft.Storage/storageAccounts/blobServices', parameters('storageAccountName'), 'default')]",
            "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]"
        ],
        "properties": {
            "publicAccess": "Container"
        }
    },  
    {
        "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
        "apiVersion": "2019-04-01",
        "name": "[concat(parameters('storageAccountName'), '/default/$web')]",
        "dependsOn": [
            "[resourceId('Microsoft.Storage/storageAccounts/blobServices', parameters('storageAccountName'), 'default')]",
            "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]"
        ],
        "properties": {
            "publicAccess": "Container"
        }
    }, 
    {
        "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
        "apiVersion": "2019-04-01",
        "name": "[concat(parameters('storageAccountName'), '/default/botstore')]",
        "dependsOn": [
            "[resourceId('Microsoft.Storage/storageAccounts/blobServices', parameters('storageAccountName'), 'default')]",
            "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]"
        ],
        "properties": {
            "publicAccess": "Container"
        }
    }, 
    {
        "type": "Microsoft.KeyVault/vaults",
        "apiVersion": "2016-10-01",
        "name": "[parameters('appName')]",
        "location": "[parameters('location')]",
        "properties": {
            "sku": {
                "family": "A",
                "name": "standard"
            },
            "tenantId": "{%%tenantId%%}",
            "accessPolicies": [
                {
                    "tenantId": "{%%tenantId%%}",
                    "objectId": "ec5b35fa-94ca-4733-96d5-416d3f5043ed",
                    "permissions": {
                        "keys": [
                            "get",
                            "list",
                            "update",
                            "create",
                            "import",
                            "delete",
                            "recover",
                            "backup",
                            "restore"
                        ],
                        "secrets": [
                            "get",
                            "list",
                            "set",
                            "delete",
                            "recover",
                            "backup",
                            "restore"
                        ],
                        "certificates": [
                            "get",
                            "list",
                            "update",
                            "create",
                            "import",
                            "delete",
                            "recover"
                        ]
                    }
                }
            ],
            "enabledForDeployment": false,
            "enabledForDiskEncryption": false,
            "enabledForTemplateDeployment": false
        }
    },
    {
        "type":"Microsoft.Web/serverfarms",
        "apiVersion":"2016-09-01",
        "name":"[parameters('appPlanName')]",
        "location":"[parameters('location')]",
        "sku":{
            "name":"Y1",
            "tier":"Dynamic",
            "size":"Y1",
            "family":"Y",
            "capacity":0

        },
        "kind":"functionapp",
        "properties": {
            "name": "[parameters('appPlanName')]",
            "perSiteScaling": false,
            "reserved": false,
            "targetWorkerCount": 0,
            "targetWorkerSizeId": 0
        }        
    },
    {
        "type":"Microsoft.Web/sites",
        "apiVersion":"2016-08-01",
        "name":"[parameters('appName')]",
        "location":"[parameters('location')]",
        "dependsOn":[
            "[resourceId('Microsoft.Web/serverfarms', parameters('appPlanName'))]"
        ],
        "kind":"functionapp",
        "properties": {
            "enabled": true,
            "hostNameSSlStates":[
                {
                    "name":"[concat(parameters('appName'), '.azurewebsites.net')]",
                    "sslState":"Disabled",
                    "hostType":"Standard"
                },
                {
                    "name":"[concat(parameters('appName'), '.scm.azurewebsites.net')]",
                    "sslState":"Disabled",
                    "hostType":"Repository"
                }
            ],
            "serverFarmId":"[resourceId('Microsoft.Web/serverfarms',parameters('appPlanName'))]",
            "reserved": false,
            "scmSiteAlsoStopped": false,
            "clientAffinityEnabled": false,
            "clientCertEnabled": false,
            "hostNamesDisabled": false,
            "containerSize": 1536,
            "dailyMemoryTimeQuota": 0,
            "httpsOnly": true,     
            "siteConfig": {
                "appSettings": [
                    {
                        "name": "AzureWebJobsStorage",
                        "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('storageAccountName'),';AccountKey=',concat(listKeys(variables('storageAccountId'),'2015-05-01-preview').key1))]"
                    },
                    {
                        "name": "AzureWebJobsDashboard",
                        "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('storageAccountName'),';AccountKey=',concat(listKeys(variables('storageAccountId'),'2015-05-01-preview').key1))]"

                    },
                    {
                        "name": "FUNCTIONS_EXTENSION_VERSION",
                        "value": "~2"
                    },
                    {
                        "name": "FUNCTIONS_WORKER_RUNTIME",
                        "value": "dotnet"
                    },
                    {
                        "name": "WEBSITE_CONTENTSHARE",
                        "value": "[toLower(parameters('appName'))]"
                    },
                    {
                        "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
                        "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('storageAccountName'),';AccountKey=',concat(listKeys(variables('storageAccountId'),'2015-05-01-preview').key1))]"
                    },
                    {
                        "name": "WEBSITE_NODE_DEFAULT_VERSION",
                        "value": "8.11.1"
                    },             
                    {
                        "name": "blobStore",
                        "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('storageAccountName'),';AccountKey=',concat(listKeys(variables('storageAccountId'),'2015-05-01-preview').key1))]"
                    },
                    {
                        "name":"azureSearchKey",
                        "value":"{%%azuresearch-key%%}"
                    },
                    {
                        "name":"aiKey",
                        "value":"{%%aiKey%%}"
                    },
                    {
                        "name":"baseUSGSUrl",
                        "value":"{%%baseUSGSUrl%%}"
                    },
                    {
                        "name":"azureSearchUrl",
                        "value":"{%%searchUrl%%}"
                    },
                    {
                        "name":"riverTable",
                        "value":"{%%riverTable%%}"
                    }
                ]
            }

        }
    },
    {
        "type":"Microsoft.Web/sites",
        "apiVersion":"2016-08-01",
        "name":"[parameters('preferencesApp')]",
        "location":"[parameters('location')]",
        "dependsOn":[
            "[resourceId('Microsoft.Web/serverfarms',parameters('appPlanName'))]"
        ],
        "kind":"functionapp",
        "properties": {
            "enabled": true,
            "hostNameSSlStates":[
                {
                    "name":"[concat(parameters('preferencesApp'), '.azurewebsites.net')]",
                    "sslState":"Disabled",
                    "hostType":"Standard"
                },
                {
                    "name":"[concat(parameters('preferencesApp'), '.scm.azurewebsites.net')]",
                    "sslState":"Disabled",
                    "hostType":"Repository"
                }
            ],
            "serverFarmId":"[resourceId('Microsoft.Web/serverfarms',parameters('appPlanName'))]",
            "reserved": false,
            "scmSiteAlsoStopped": false,
            "clientAffinityEnabled": false,
            "clientCertEnabled": false,
            "hostNamesDisabled": false,
            "containerSize": 1536,
            "dailyMemoryTimeQuota": 0,
            "httpsOnly": false,
            "siteConfig": {
                "appSettings": [
                    {
                        "name": "blobStore",
                        "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('storageAccountName'),';AccountKey=',concat(listKeys(variables('storageAccountId'),'2015-05-01-preview').key1))]"
                    },
                    {
                        "name": "AzureWebJobsStorage",
                        "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('storageAccountName'),';AccountKey=',concat(listKeys(variables('storageAccountId'),'2015-05-01-preview').key1))]"
                    },
                    {
                        "name": "FUNCTIONS_EXTENSION_VERSION",
                        "value": "~2"
                    }
                ]
            }                     

        }
    }, 
    {
        "type": "Microsoft.Insights/components",
        "apiVersion": "2015-05-01",
        "name":"[parameters('appName')]",
        "location":"[parameters('location')]", 
        "tags": {
            "hidden-link:/subscriptions/{%%subscription%%}/resourceGroups/waterfinder/providers/Microsoft.Web/sites/paddle-finder2": "Resource",
            "hidden-link:/subscriptions/{%%subscription%%}/resourceGroups/waterfinder/providers/Microsoft.Web/sites/paddle-finder-preferences": "Resource"
        },        
        "kind":"web",
        "properties" : {
            "Application_Type": "web",
            "Request_Source": "rest"
        }
    },
    {
        "type": "Microsoft.BotService/botServices",
        "apiVersion": "2018-07-12",
        "name":"[parameters('botAppName')]",
        "location": "global",
        "sku": {
            "name":"F0"
        },
        "kind":"sdk",
        "properties": {
            "displayName": "[parameters('botAppName')]",
            "iconUrl": "https://docs.botframework.com/static/devportal/client/images/bot-framework-default.png",
            "endpoint": "https://whitewaterwebster.azurewebsites.net/api/messages",
            "msaAppId": "9bd4236c-716f-4bfc-8d8e-be99c19cca36",
            "developerAppInsightKey": "",
            "developerAppInsightsApplicationId": "",
            "luisAppIds":[]
        }
    },       
    {
        "type":"Microsoft.Web/serverfarms",
        "apiVersion": "2016-09-01",
        "name": "[parameters('botAppName')]",
        "location": "[parameters('location')]",
        "sku": {
            "name": "F1",
            "tier": "Free",
            "size": "F1",
            "family": "F",
            "capacity": 0
        },
        "kind": "app",
        "properties": {
            "name": "[parameters('botAppName')]",
            "perSiteScaling": false,
            "reserved": false,
            "targetWorkerCount": 0,
            "targetWorkerSizeId": 0
        }
    },
    {
        "type": "Microsoft.Web/sites",
        "apiVersion": "2016-08-01",
        "name": "[parameters('botAppName')]",
        "location": "[parameters('location')]",
        "dependsOn": [
            "[resourceId('Microsoft.Web/serverFarms', parameters('botAppName'))]"
        ],
        "kind": "app",
        "properties": {
            "enabled": true,
            "serverFarmId": "[resourceid('Microsoft.Web/serverfarms', parameters('botAppName'))]",
            "reserved": false,
            "scmSiteAlsoStopped": false,
            "clientAffinityEnabled": true,
            "clientCertEnabled": false,
            "hostNamesDisabled": false,
            "containerSize": 0,
            "dailyMemoryTimeQuota": 0,
            "httpsOnly": false,
            "siteConfig": {
                "appSettings":[
                    {
                        "name": "LuisAPIHostName",
                        "value": "{%%LuisAPIHostName%%}"
                    },
                    {
                        "name": "LuisAPIKey",
                        "value": "{%%LuisAPIKey%%}"
                    },
                    {
                        "name": "LuisAppId",
                        "value": "{%%LuisAppId%%}"
                    },
                    {
                        "name": "MicrosoftAppId",
                        "value": "{%%msftAppId%%}"
                    },
                    {
                        "name": "MicrosoftAppPassword",
                        "value": "{%%msftAppPass%%}"
                    },
                    {
                        "name": "WEBSITE_NODE_DEFAULT_VERSION",
                        "value": "10.14.1"
                    }
                ]
            }
        }
    },
    {
        "type": "Microsoft.BotService/botServices/channels",
        "apiVersion": "2018-07-12",
        "name":"[concat(parameters('botAppName'),'/WebChatChannel')]",
        "location": "global",
        "properties":{
            "channelName": "WebChatChannel"
        },
        "dependsOn": [
            "[resourceId('Microsoft.BotService/botServices', parameters('botAppName'))]"
        ]
    },        
    {
        "type": "Microsoft.BotService/botServices/channels",
        "apiVersion": "2018-07-12",
        "name":"[concat(parameters('botAppName'), '/DirectLineChannel')]",
        "location": "global",
        "properties":{
            "channelName": "DirectLineChannel"
        },
        "dependsOn": [
            "[resourceId('Microsoft.BotService/botServices', parameters('botAppName'))]"
        ]
    },
    {
        "type": "Microsoft.BotService/botServices/channels",
        "apiVersion": "2018-07-12",
        "name":"[concat(parameters('botAppName'),'/SmsChannel')]",
        "location": "global",
        "properties":{
            "channelName":"SmsChannel"
        },
        "dependsOn": [
            "[resourceId('Microsoft.BotService/botServices', parameters('botAppName'))]"
        ]
    }//,
    // {
    //     "type": "Microsoft.CognitiveServices/accounts",
    //     "apiVersion": "2016-02-01-preview",
    //     "name": "[parameters('authoringName')]",
    //     "location": "westus",
    //     "kind": "LUIS.Authoring",
    //     "sku": {
    //         "name": "F0"
    //     },
    //     "properties":{}
    // }
    // {
    //     "type": "Microsoft.CognitiveServices/accounts",
    //     "apiVersion": "2017-04-18",
    //     "name": "[parameters('luisName')]",
    //     "location": "[parameters('location')]",
    //     "kind": "LUIS",
    //     "sku": {
    //         "name": "S0"
    //     },
    //     "dependsOn": [
    //         "[resourceId('Microsoft.CognitiveServices/accounts', parameters('authoringName'))]"
    //     ]
    // }         

    
  ],
  "outputs": { }
}
